<li class="list-group-item d-flex justify-content-between align-items-center">
  <%= user.name %> — <%= user.email %> — <strong><%= user.user_type %></strong>
  <div>
    <% if (user.user_type === 'user') { %>
      <a href="/promote/<%= user._id %>" class="btn btn-sm btn-primary">Promote</a>
    <% } else { %>
      <a href="/demote/<%= user._id %>" class="btn btn-sm btn-warning">Demote</a>
    <% } %>
  </div>
</li>
